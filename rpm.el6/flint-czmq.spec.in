Summary: CZMQ for Flint
Name: flint-czmq
Version: czmq_VERSION
Release: czmq_RELEASE%{?dist}
License: MPLv2
URL: http://czmq.zeromq.org/
Source0: %{name}-%{version}.tar.gz
BuildRoot: %{_tmppath}/%{name}-%{version}-%{release}-root
BuildRequires: gcc
BuildRequires: make
BuildRequires: flint-zeromq >= 4.2.2
BuildRequires: libuuid-devel
Requires: flint-zeromq >= 4.2.2
Requires: libuuid

%description
This is a CZMQ package for Flint.

%prep
%setup -q

%build
./configure --prefix=/opt/flint --enable-silent-rules PKG_CONFIG_PATH=/opt/flint/lib/pkgconfig
make

%install
rm -rf %{buildroot}
make install DESTDIR=%{buildroot}
mkdir -p %{buildroot}/etc/ld.so.conf.d
echo '/opt/flint/lib' > %{buildroot}/etc/ld.so.conf.d/%{name}.conf

%clean
rm -rf %{buildroot}

%post
/sbin/ldconfig

%postun
/sbin/ldconfig

%files
%defattr(-,root,root,-)
