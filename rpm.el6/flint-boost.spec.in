Summary: Boost library for Flint
Name: flint-boost
Version: boost_VERSION
Release: boost_RELEASE%{?dist}
License: Boost-1.0
URL: https://www.boost.org/
Source0: %{name}-%{version}.tar.gz
BuildRoot: %{_tmppath}/%{name}-%{version}-%{release}-root
BuildRequires: gcc-c++
BuildRequires: make

%description
This is a Boost library package for Flint.

%prep
%setup -q

%build
./bootstrap.sh --without-icu

%install
rm -rf %{buildroot}
./b2 -d0 --prefix=%{buildroot}/opt/flint --without-atomic --without-chrono --without-container --without-context --without-coroutine --without-date_time --without-exception --without-fiber --without-graph --without-graph_parallel --without-iostreams --without-locale --without-log --without-mpi --without-python --without-regex --without-stacktrace --without-serialization --without-signals --without-thread --without-timer --without-type_erasure --without-wave --layout=tagged architecture=combined link=shared variant=release threading=single,multi install
mkdir -p %{buildroot}/etc/ld.so.conf.d
echo '/opt/flint/lib' > %{buildroot}/etc/ld.so.conf.d/%{name}.conf

%clean
rm -rf %{buildroot}

%post
/sbin/ldconfig

%postun
/sbin/ldconfig

%files
%defattr(-,root,root,-)
%doc
/etc/ld.so.conf.d/%{name}.conf
/opt/flint/include/boost
/opt/flint/lib/libboost_*

%changelog
